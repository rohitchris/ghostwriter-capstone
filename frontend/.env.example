# Firebase Configuration
# Get these values from your Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > Firebase SDK snippet > Config

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Auth mode toggle (true uses mock/local auth; false uses Firebase)
VITE_USE_MOCK_AUTH=true

# Example:
# VITE_FIREBASE_API_KEY=AIzaSyC7X8h...
# VITE_FIREBASE_AUTH_DOMAIN=ghostwriter-app.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=ghostwriter-app
# VITE_FIREBASE_STORAGE_BUCKET=ghostwriter-app.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
# VITE_FIREBASE_APP_ID=1:123456789012:web:abc123def456
